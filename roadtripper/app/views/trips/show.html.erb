<div class="background">
<div class="trip-container">
  <h1><%= @user.username %>'s Roadtrip</h1>
  <h3>From <%= @trip.origin %> to <%= @trip.destination %></h3>
  <h3>Departing: <%= @trip.date %> at <%= @trip.time %></h3>
  <img class="car" src=<%= @trip.car_photo %>>
  <h2>Seats available: <%= @trip.seats %></h2>
  <p>Price: <%= @trip.price %></p>
</div>

<div class="passengers-container">
  <h3>Passengers:</h3>
  <% @passengers.each do |passenger| %>
    <div class="passenger">
      <div class="icon"><img src=<%= passenger.user.profile_picture %>></div>
      <%= passenger.user.username %>
      <%= link_to "Profile", user_path(passenger.user.id) %>
    </div>
  <% end %>
  <%= button_to "Join this trip!", join_path(@trip.id) %>
</div>

</div>
