<%= form_for @user do |f| %>
  <% if @error %>
    <%= @error %>
  <% end %>

    <%= f.label :username %>
    <%= f.text_field :username, required: true, title: "Please Enter Your Username" %>

    <%= f.label :password %>
    <%= f.password_field :password, required: true, pattern: '.{6,}', title: "6 characters minimum" %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>
   